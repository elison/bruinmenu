<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".FoodDetailsActivity" >

    <ImageView
        android:id="@+id/lvImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/image_oatmeal" />
    
    <!--  Calories  -->
    <TextView
        android:id="@+id/tvCaloriesLabel"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvName"
        android:layout_below="@+id/lvImage"
        android:text="Calories"
        android:textSize="@dimen/foodNameSize" />
    
    <TextView
        android:id="@+id/tvCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tvCaloriesLabel"
        android:layout_below="@+id/lvImage"
        android:textSize="@dimen/foodNameSize"
        android:text="159" />
    
        <!--  Total Fat  -->
    <TextView
        android:id="@+id/tvFatLabel"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvName"
        android:layout_below="@+id/tvCalories"
        android:text="Total Fat"
        android:textSize="@dimen/foodNameSize" />
    
    <TextView
        android:id="@+id/tvFat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tvFatLabel"
        android:layout_below="@+id/tvCalories"
        android:textSize="@dimen/foodNameSize"
        android:text="2.8 g" />
    
            <!--  Cholesterol  -->
    <TextView
        android:id="@+id/tvChoLabel"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvName"
        android:layout_below="@+id/tvFat"
        android:text="Cholesterol"
        android:textSize="@dimen/foodNameSize" />
    
    <TextView
        android:id="@+id/tvCho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tvChoLabel"
        android:layout_below="@+id/tvFat"
        android:textSize="@dimen/foodNameSize"
        android:text="0 mg" />

    <!--  Sodium  -->
    <TextView
        android:id="@+id/tvSodiumLabel"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvName"
        android:layout_below="@+id/tvCho"
        android:text="Sodium"
        android:textSize="@dimen/foodNameSize" />
    
    <TextView
        android:id="@+id/tvSodium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tvSodiumLabel"
        android:layout_below="@+id/tvCho"
        android:textSize="@dimen/foodNameSize"
        android:text="162.3 mg" />
    
    <!--  Protein  -->
    <TextView
        android:id="@+id/tvProteinLabel"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvName"
        android:layout_below="@+id/tvSodium"
        android:text="Protein"
        android:textSize="@dimen/foodNameSize" />
    
    <TextView
        android:id="@+id/tvProtein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tvProteinLabel"
        android:layout_below="@+id/tvSodium"
        android:textSize="@dimen/foodNameSize"
        android:text="6.8 g" />
    
        <!--  Ingredients -->
    <TextView
        android:id="@+id/tvIngredientsLabel"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvName"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tvProtein"
        android:text="Ingredients"
        android:textSize="@dimen/foodNameSize" />
    
    <TextView
        android:id="@+id/tvIngredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvIngredientsLabel"
        android:textSize="@dimen/titleSize"
        android:text="Water, Steel Cut Oatmeal, Sea Salt" />
</RelativeLayout>
